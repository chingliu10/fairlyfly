<body>
    <div class="content">

    </div>
    <div>mover</div>
    <script>
       var options = {
  enableHighAccuracy: true,
  timeout: 5000,
  maximumAge: 0
};

function success(pos) {

        var crd = pos.coords;

        console.log('Your current position is:');
        console.log(`Latitude : ${crd.latitude}`);
        console.log(`Longitude: ${crd.longitude}`);
        console.log(`More or less ${crd.accuracy} meters.`);
        let cover = document.querySelector(".content")
        cover.innerHTML =   `
            <h3>your longitude is ${crd.longitude} </h3>
            <h3>latitude is ${crd.latitude}</h3>
            <h3>accuracy is ${crd.accuracy}</h3>
        `
        }

        function error(err) {
            alert(err.message)
        }

        navigator.geolocation.getCurrentPosition(success, error, options)

    </script>
</body>
